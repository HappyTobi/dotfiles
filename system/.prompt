#############################################
##	Prompt
#############################################
        RED="\[\033[0;31m\]"
     YELLOW="\[\033[0;33m\]"
 	  GREEN="\[\033[0;32m\]"
       BLUE="\[\033[0;34m\]"
 LIGHT_BLUE="\[\033[1;34m\]"
  LIGHT_RED="\[\033[1;31m\]"
LIGHT_GREEN="\[\033[1;32m\]"
      WHITE="\[\033[1;37m\]"
 LIGHT_GRAY="\[\033[0;37m\]"
 COLOR_NONE="\[\e[0m\]"

function prompt_func() {
    prompt="${TITLEBAR}⚡${LIGHT_BLUE}[${RED}\$(date +%H:%M)${LIGHT_BLUE}]${LIGHT_BLUE}[${RED}\w${LIGHT_BLUE}]${COLOR_NONE}⚡"
    PS1="${prompt}\n↳ "
}

PROMPT_COMMAND=prompt_func;history -a